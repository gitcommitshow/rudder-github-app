{
  "name": "rudder_github_app",
  "description": "Assistant for external contributors",
  "private": false,
  "version": "0.11.0",
  "type": "module",
  "scripts": {
    "lint": "standard",
    "proxy": "./node_modules/.bin/smee -u $SMEE_URL -t https://$HOSTNAME-3000.csb.app/api/webhook & ./node_modules/.bin/smee -u $API_POST_GITHUB_COMMENT -t https://$HOSTNAME-3000.csb.app/api/comment",
    "start": "node app.js",
    "staging": "npm run proxy & PORT=3000 npm start",
    "test": "RUN_E2E_TESTS=true ./node_modules/.bin/mocha test/lifecycle.test.js test/**/*.test.js",
    "test:integration": "./node_modules/.bin/mocha test/lifecycle.test.js test/integration/**/*.test.js",
    "test:e2e": "RUN_E2E_TESTS=true ./node_modules/.bin/mocha test/lifecycle.test.js test/e2e/**/*.test.js"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "chai-http": "^5.0.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2",
    "smee-client": "^4.3.1",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "octokit": "^3.1.2"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
